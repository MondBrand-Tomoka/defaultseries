{
    "snippets": {
        "variables": {
            "lang": "ja",
            "locale": "ja-JP",
            "charset": "UTF-8",
            "indentation": "\t",
            "newline": "\n"
        },
        "html": {
            "abbreviations": {
              "!": "!!!+html[lang=${lang}]>head>meta[charset=${charset}]+meta[name=viewport content=width=device-width,initial-scale=1.0,minimum-scale=1.0]+title{${1:Document}}^body"
            }
        }
    }
}